generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
}

enum AccountType {
  CHECKING
  SAVINGS
  INVESTMENT
  BENEFIT
  CASH
  CREDIT_CARD
  OTHER
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  categories Category[]
  expenses   Expense[]
  incomes    Income[]
  accounts   Account[]

  @@map("users")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  color     String
  icon      String
  type      String
  userId    Int      @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses Expense[]
  incomes  Income[]

  @@index([userId])
  @@map("categories")
}

model Expense {
  id          Int      @id @default(autoincrement())
  description String
  amount      Decimal
  date        DateTime
  userId      Int      @map("user_id")
  categoryId  Int?     @map("category_id")
  accountId   Int?     @map("account_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  account  Account?  @relation(fields: [accountId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@map("expenses")
}

model Income {
  id          Int      @id @default(autoincrement())
  description String
  amount      Decimal
  date        DateTime
  userId      Int      @map("user_id")
  categoryId  Int?     @map("category_id")
  accountId   Int?     @map("account_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  account  Account?  @relation(fields: [accountId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@map("incomes")
}

model Account {
  id                 Int         @id @default(autoincrement())
  description        String
  openingBalance     Decimal
  openingBalanceDate DateTime
  bank               String?
  type               AccountType
  color              String
  userId             Int         @map("user_id")
  createdAt          DateTime    @default(now()) @map("created_at")
  updatedAt          DateTime    @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses Expense[]
  incomes  Income[]

  @@index([userId])
  @@map("accounts")
}
