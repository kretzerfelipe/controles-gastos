generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")

  // Relationships
  categories Category[]
  expenses   Expense[]
  incomes    Income[]

  @@map("users")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  color     String
  icon      String
  type      String
  userId    Int      @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  // Relationships
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses Expense[]
  incomes  Income[]

  @@map("categories")
}

model Expense {
  id          Int      @id @default(autoincrement())
  description String
  amount      Float
  date        DateTime
  userId      Int      @map("user_id")
  categoryId  Int      @map("category_id")
  createdAt   DateTime @default(now()) @map("created_at")

  // Relationships
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("expenses")
}

model Income {
  id          Int      @id @default(autoincrement())
  description String
  amount      Float
  date        DateTime
  userId      Int      @map("user_id")
  categoryId  Int      @map("category_id")
  createdAt   DateTime @default(now()) @map("created_at")

  // Relationships
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("incomes")
}
